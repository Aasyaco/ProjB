{
  "name": "projb-server",
  "version": "1.0.0",
  "description": "Server project with native C++ and Rust addons",
  "main": "dist/index.js",
  "scripts": {
    "build-native-cpp": "cd native/cpp-addon && node-gyp rebuild",
    "build-native-rust": "cd native/rust-validator && cargo build --release",
    "build-native": "npm run build-native-cpp && npm run build-native-rust",
    "build": "npm run build-native && tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "helmet": "^7.0.0",
    "rate-limiter-flexible": "^2.3.0"
  },
  "devDependencies": {
    "@types/helmet": "^7.0.0",
    "@types/node": "^20.5.1",
    "typescript": "^5.8.3",
    "node-gyp": "^9.3.1"
  },
  "engines": {
    "node": ">=18"
  },
  "type": "module"
}
