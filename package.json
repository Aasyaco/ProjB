{
  "name": "projb-server",
  "version": "1.0.0",
  "description": "Project with native C++ addon and Express API",
  "main": "api/index.js",
  "type": "module",
  "scripts": {
    "start": "node api/index.js",
    "build": "npm run build:native && npm run build:ts",
    "build:native": "npm run build:cpp && npm run build:rust",
    "build:cpp": "cd native/cpp-addon && node-gyp rebuild",
    "build:rust": "cd native/rust-addon && cargo build --release",
    "build:ts": "tsc",
    "clean": "cd native/cpp-addon && node-gyp clean"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-addon-api": "^5.0.0"
  },
  "devDependencies": {
    "typescript": "^5.1.3",
    "@types/express": "^4.17.17"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "license": "MIT"
}
