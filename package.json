{
  "name": "projb-server",
  "version": "1.0.0",
  "description": "ProjB server application",
  "main": "api/index.js",
  "scripts": {
    "start": "node api/index.js",
    "build": "npm run build:native && npm run build:ts",
    "build:native": "npm run build:cpp",
    "build:cpp": "cd && cd native/cpp-addon && node-gyp rebuild",
    "build:ts": "tsc",
    "clean": "cd && cd native/cpp-addon && node-gyp clean"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-addon-api": "^5.0.0"
  },
  "devDependencies": {
    "typescript": "^5.1.3",
    "node-gyp": "^9.3.1",
    "@types/express": "^4.17.17"
  },
  "license": "MIT",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Hel"
  }
}
